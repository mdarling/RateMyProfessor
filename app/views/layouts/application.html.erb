<!DOCTYPE html>
<html>
    <head>
        <title>RateMyProfessor</title>
        <%= stylesheet_link_tag    "application", :media => "all" %>
        <%= javascript_include_tag "application" %>
        <%= csrf_meta_tags %>
        <%= render 'layouts/shim' %>
    </head>
    <body>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= render 'layouts/header' %>
        <div class = "container">
            <%= yield %>
            <%= render 'layouts/footer' %>
        </div>
    </body>
</html>
